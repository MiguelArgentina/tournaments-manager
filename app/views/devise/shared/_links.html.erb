<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.sessions.log_in'), new_session_path(resource_name), class:"btn btn-outline-primary mt-4 mb-3" %><br/>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.registrations.sign_up'), "/#{request.path.split("/")[1]}/sign_up" %><br/>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.passwords.forgot_password?'), new_password_path(resource_name) %><br/>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.passwords.missing_confirmation_instructions?'), new_confirmation_path(resource_name) %><br/>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.passwords.missing_unlock_instructions?'), new_unlock_path(resource_name) %><br/>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= form_for "Login",
                url: omniauth_authorize_path(resource_name, provider),
                method: :post,
                data: {turbo: "false"} do |f| %>
      <%= f.submit t('devise.sessions.log_in'), type: "image", src: url_for('/assets/google_sign_in_button.png'), class: "my-2 col-4 col-md-2" %>
    <% end %>
  <% end %>
<% end %>

