<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :time_zone %><br />
    <%= f.time_zone_select :time_zone, nil, default: ActiveSupport::TimeZone.country_zones('py').map(&:to_s).first,:prompt=>"Select Time Zone" %>
  </div>

  <div class="field">
    <%= f.label :country_code %><br />
    <%= f.country_select( :country_code, priority_countries: ["PY", "AR"], priority_countries_divider: "~~~~~~") %>
  </div>

  <div class="field">
    <%= f.label :uid %><br />
    <%= f.text_field :uid, autofocus: true, autocomplete: "uid" %>
  </div>

  <div class="field">
    <%= f.label :codnickname %><br />
    <%= f.text_field :codnickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :cellphone %><br />
    <%= f.text_field :cellphone, autofocus: true, autocomplete: "cellphone" %>
  </div>

  <br>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br><br>
<%= render "devise/shared/links" %>
