<%= render "layouts/shared/error_messages", resource: resource %>
<%= form_for resource do |f| %>

  <%= f.hidden_field :creator_id, value: current_user.id, class:"me-3" %>

  <div class="row justify-content-between mt-5">
    <div class="mb-5 col-12 col-md-9 col-lg-7 mb-3 d-flex">
      <%= f.label :name, class:"me-3 align-self-center" %>
      <%= f.text_field :name, class:"form-control", placeholder:"Torneo BR/Multi Duos/Singles/Teams" %>
    </div>
  </div>

  <div class="row justify-content-between mt-5">
    <div class="col-12 col-md-4 col-lg-3 m-2 d-flex justify-content-between align-items-center">
      <%= f.label :game_mode, class:"me-3" %>
      <%= f.select :game_mode, Tournament.game_modes.keys.to_a, class:"form-control"%>
    </div>

    <div class="col-12 col-md-4 col-lg-3 m-2 d-flex justify-content-between align-items-center">
      <%= f.label :team_members, class:"me-3" %>
      <%= f.select :team_members, Tournament.team_members.keys.to_a, class:"form-control"%>
    </div>

    <div class="col-12 col-md-4 col-lg-3 m-2 d-flex justify-content-between align-items-center">
      <%= f.label :rounds, class:"me-3" %>
      <%= f.select :rounds, options_for_select(Array(1..Tournament::MAX_ROUNDS)), class:"form-control"%>
    </div>

    <div class="col-9 col-md-4 col-lg-3 m-2 d-flex justify-content-between align-items-center">
      <%= f.label :start_date %><br>
      <%= f.text_field :start_date, class: "w-75", style:"font-size: 0.8rem;", id: 'flatpickr-calendar' %>
    </div>
  </div>

  <div class="text-center mt-5">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>

<% end %>


<script type="module">
    const el = document.getElementById('flatpickr-calendar');
    flatpickr(el, {
        enableTime:      true,
        altInput:        true,
        minDate:         "today",
        altFormat:       "F j, Y at h:i K",
        dateFormat:      "Y-m-d H:i",
        minuteIncrement: 10,
        locale: 'es',
    });
</script>
